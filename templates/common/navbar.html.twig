{% set currentRoute = app.request.attributes.get('_route') %}
{% set routes = {
    'farm': 'the_farm',
    'contact': 'find_us',
} %}
<nav class="navbar navbar-expand-lg navbar-dark bg-transparent text-white position-fixed w-100">
    <div class="container px-5">
        <a class="navbar-brand {{ currentRoute == 'home' ? ' text-white ' : ' text-dark ' }}"
           href="{{ path('home') }}">{{ 'site_title'|trans }}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span
                    class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                {% for routeName, routeTitle in routes %}
                    <li class="nav-item">
                        {{ include('common/button.html.twig', {text: routeTitle|trans, type: 'link', href: path(routeName), classes: currentRoute == 'home' ? ' text-white ' : ' text-dark ' }) }}
                    </li>
                {% endfor %}
                <li class="nav-item ms-3">
                    {{ include('common/button.html.twig', {text: 'login'|trans, type: 'light', href: path('app_login')}) }}
                </li>
                <li class="nav-item ms-3">
                    {{ include('common/button.html.twig', {text: 'our_products'|trans, type: 'secondary', href: path('product')}) }}
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item"><a class="nav-link"
                                            href="{{ path('admin') }}">{{ 'admin'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
