{% set currentRoute = app.request.attributes.get('_route') %}
{% set routes = {
    'home': 'home',
    'product': 'our_products',
    'contact': 'where_when_to_find_us',
    'farm': 'the_farm',
    'app_login': 'login',
} %}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary text-white">
    <div class="container px-5">
        <a class="navbar-brand" href="{{ path('home') }}">{{ 'site_title'|trans }}</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span
                    class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                {% for routeName, routeTitle in routes %}
                    <li class="nav-item"><a class="nav-link {{ currentRoute == routeName ? 'active' : '' }}"
                                            aria-current="page"
                                            href="{{ path(routeName) }}">{{ routeTitle|trans }}</a>
                    </li>
                {% endfor %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item"><a class="nav-link"
                                            aria-current="page"
                                            href="{{ path('admin') }}">{{ 'admin'|trans }}</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
